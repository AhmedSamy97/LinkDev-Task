@model Order
<div class="container">
    <form method="post" asp-action="">
        <div class="form-group ">
            <label for="name">Name</label>
            <input asp-for="ProductName" type="text" disabled class="form-control" id="name">
        </div>
        <br />
        <div class="form-group  mb-1">
            <label for="desc">Quantity</label>
            <input asp-for="Quantity" disabled type="text" class="form-control" id="Qty">

        </div>
        <div class="form-group  mb-1">
            <label for="discount">Discount % </label>
            <input asp-for="Discount" disabled type="number" class="form-control" id="discount" value="0">
 
        </div>
        <div class="form-group mb-1">
            <label for="price">Price</label> 
            <input asp-for="ActualPrice" type="text" disabled class="form-control" id="price"> 
        </div>

        <button type="submit" class="btn btn-success">Place Order</button>
    </form>
</div>